<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZOCO_1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/primary_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--<item name="android:fontFamily">@font/comfortaa</item>-->
    </style>

    <style name="Theme.ZOCO_1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <style name="Theme.ZOCO_1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ZOCO_1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name='Theme.ZOCO_1.starting' parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="postSplashScreenTheme">@style/Theme.ZOCO_1.NoActionBar</item>
    </style>

    <style name="TitleTextView">
        <item name="android:fontFamily">@fonts/comfortaa_bold</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="h1" parent="TitleTextView">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="h2" parent="TitleTextView">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="h3" parent="TitleTextView">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="h4" parent="TitleTextView">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="h5" parent="TitleTextView">
        <item name="android:textSize">16sp</item>
    </style>

</resources>